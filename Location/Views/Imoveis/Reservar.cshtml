@model Location.Models.Imovel

@{
    ViewData["Title"] = "Reservar";
}

<h2>Reservar</h2>


<div class="row">

    <hr />
    <div class="col-md-6">
        <div id="demo" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner">

                @{
                    var posicao = 1;
                    foreach (var foto in Model.Fotos)
                    {
                        if (posicao == 1)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/Storage/@Model.Id/@foto.Caminho">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Storage/@Model.Id/@foto.Caminho">
                            </div>
                        }
                        posicao++;
                    }
                }
            </div>
            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
        <div class="row mt-3  rounded bg-light text-center">
            <div class="col-md-3">
                <i class="fa fa-car"></i> Vagas<br />
                @Model.Vagas
            </div>
            <div class="col-md-3">
                <i class="fa fa-bed"></i> Quartos <br />
                @Model.QUartos
            </div>
            <div class="col-md-3">
                <i class="fa fa-bath"></i> Banheiros <br />
                @Model.Banheiros
            </div>
            <div class="col-md-3">
                Área <br />
                @Model.Banheiros
            </div>
        </div>
    </div>
     <div class="col-md-1"></div>
     <div class="col-md-5 rounded bg-light">
         
         <form  action="/Contratos/Create" method="post" novalidate="novalidate">
             <div class="row">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                 <div class="col-md-12">
                     <h4 class="mt-3">@Html.DisplayFor(model => model.Nome)</h4>

                     @Html.DisplayFor(model => model.Endereco), @Html.DisplayFor(model => model.Numero) - @Html.DisplayFor(model => model.Bairro), @Html.DisplayFor(model => model.Cidade) -@Html.DisplayFor(model => model.Uf), @Html.DisplayFor(model => model.CEP)
                     <hr />
                 </div>
                     <input type="hidden" asp-for="Contrato.ImovelId" class="form-control form-control-sm" value="@Model.Id"/>
               
                 <div class="col-md-12">
                     <label asp-for="Contrato.ClienteId" class="control-label"></label>
                     <select asp-for="Contrato.ClienteId" class="form-control form-control-sm" asp-items="ViewBag.ClienteId"></select>
                 </div>
                 <div class="col-md-6">
                     <label asp-for="Contrato.DataInicio" class="control-label"></label>
                     <input asp-for="Contrato.DataInicio" class="form-control form-control-sm" />
                     <span asp-validation-for="Contrato.DataInicio" class="text-danger"></span>
                 </div>
                 <div class="col-md-6">
                     <label asp-for="Contrato.DataFim" class="control-label"></label>
                     <input asp-for="Contrato.DataFim" class="form-control form-control-sm" />
                     <span asp-validation-for="Contrato.DataFim" class="text-danger"></span>
                 </div>
                 <div class="col-md-12">
                     <label asp-for="Contrato.Valor" class="control-label"></label>
                     <input asp-for="Contrato.Valor" class="form-control form-control-sm" />
                     <span asp-validation-for="Contrato.Valor" class="text-danger"></span>
                 </div>
                 <div class="col-md-12 text-right mt-3">
                     <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                     <input type="submit" value="Confirmar" class="btn btn-primary" />
                 </div>
             </div>
         </form>
         
</div>

